filetype plugin on
filetype indent on

set autoread

" Ignore compiled files
set wildignore=*.o,*~,*.pyc

" Always show current position
set ruler

set cmdheight=2

set backspace=eol,start,indent

" Ignore case while searching
set ignorecase

" Colors / Fonts
"

" Syntax highlighting
syntax enable
" color smyck

set encoding=utf8

" Backup and such
"
set nobackup
set noswapfile
set nowb

" Tabs and such
"
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

" Mappings
"
imap jj <Esc>
